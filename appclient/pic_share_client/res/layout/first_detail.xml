<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white2" >

        	<LinearLayout android:id="@+id/orderprocess_wrap"
            	android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
               android:layout_marginBottom="@dimen/detail_bottom_padding"
               android:orientation="vertical" >
            	
    <include
        android:layout_width="wrap_content"
        layout="@layout/common_top_title_layout" />
        
        <ScrollView 
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
	   	    android:background="@android:color/transparent"
    		android:scrollbarStyle="outsideOverlay" >
				
		<LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
 			   android:orientation="vertical" >
 			   
		    
           		 <RelativeLayout 
				          android:layout_width="fill_parent"
				          android:layout_height="@dimen/baseTop">		
    			</RelativeLayout>
    			
           		<RelativeLayout style="@style/OrderProcessRLayout" android:background="@drawable/preference_first_item" >
					<ImageView  style="@style/topImageView2"
                            android:id="@+id/icon_layout"
        					android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true" />			
    			</RelativeLayout>
     			
           		<RelativeLayout style="@style/OrderProcessRLayout" android:background="@drawable/preference_item" >
           			<TextView style="@style/OrderProcessMSGTextViewRight2" android:text=""  android:id="@+id/pic_name" />
    			</RelativeLayout>
    			
     			<RelativeLayout style="@style/OrderProcessRLayout" android:background="@drawable/preference_last_item" >
           			<TextView style="@style/OrderProcessMSGTextViewRight2" android:text="" android:id="@+id/pic_memo"  />
     			</RelativeLayout>
	      				
</LinearLayout>
    	
    </ScrollView>

</LinearLayout>
    
          <RelativeLayout
			   android:layout_alignParentBottom="true"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">
              
     		<include layout="@layout/common_detail_button"/>  
              
          </RelativeLayout>

</RelativeLayout>