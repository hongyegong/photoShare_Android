<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white2"
    android:orientation="vertical">
    
	<include layout="@layout/common_top_title_layout"/>
    
	<RelativeLayout 
        android:id="@+id/login_wrap"
    	android:layout_width="wrap_content"
   		android:layout_height="wrap_content" >
	    
			<include layout="@layout/fourth_member_login_layout"/>
			
	</RelativeLayout>
	
	
	<RelativeLayout 
        android:id="@+id/zhuce_wrap"
	    android:visibility="gone"
    	android:layout_width="wrap_content"
   		android:layout_height="wrap_content" >
	    
			<include layout="@layout/fourth_member_zhuce_layout"/>
			
	</RelativeLayout>
	
	
	<RelativeLayout 
        android:id="@+id/info__wrap"
	    android:visibility="gone"
    	android:layout_width="wrap_content"
   		android:layout_height="wrap_content" >
	    
			<include layout="@layout/fourth_member_info_layout"/>
			
	</RelativeLayout>
	
</LinearLayout>